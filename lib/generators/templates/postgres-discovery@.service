[Unit]
Description=Announce Postgres@%i service
BindsTo=postgres@%i.service

[Service]
EnvironmentFile=/etc/environment
ExecStart=/bin/sh -c "while true; do etcdctl set /announce/services/postgres%i ${COREOS_PUBLIC_IPV4}:%i --ttl 60; sleep 45; done"
ExecStop=/usr/bin/etcdctl rm /announce/services/postgres%i

[X-Fleet]
X-ConditionMachineOf=postgres@%i.service
